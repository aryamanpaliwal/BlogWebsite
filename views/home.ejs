<%- include("partials/header"); -%>
<a href="/"><h1 class="post-header">Home</h1></a>
<p class="post-content">
    <%= home_content %>
</p>
<% new_posts.forEach(function (post) { %>
    <a href="/posts/<%= post._id %>"><h1 class="post-header">
        <%= post.title %>
    </h1></a>
    <p class="post-content">
        <%= post.content.substring(0,100) + "..." %>
        <a href="/posts/<%= post._id %>" class="read-more">
            Read More
        </a>
    </p>
<% }); %>
<%- include("partials/footer"); -%> 